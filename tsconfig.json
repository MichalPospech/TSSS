{
  "compilerOptions": {
    "outDir": "dist", // where to put the compiled JS files
    "target": "ESNext", // which level of JS support to target
    "module": "ESNext", // which system for the program AMD, UMD, System, CommonJS
    // Recommended: Compiler complains about expressions implicitly typed as 'any'
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src"
  ], // which files to compile
  "exclude": [
    "node_modules"
  ], // which files to skip
}